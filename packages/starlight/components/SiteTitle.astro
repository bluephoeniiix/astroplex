---
import { logos } from 'virtual:starlight/user-images';
import config from 'virtual:starlight/user-config';
import type { Props } from '../props';
import { formatPath } from '../utils/format-path';

const href = formatPath(Astro.props.locale || '/');
---

<a {href} class="site-title sl-flex">
	{
		config.logo && logos.dark && (
			<>
				<p style="color: #c1c7cd; font-size: 16px; font-weight: 600; font-family: 'IBM Plex Sans Condensed'; font-style: italic; border: 2px solid #343a3f; padding: 2px; display: inline-flex; align-items: baseline; background: #161616; position: relative; overflow: hidden;">
					<span style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-image: linear-gradient(transparent 90%, rgba(193, 199, 205, 0.1) 10%), linear-gradient(90deg, transparent 90%, rgba(193, 199, 205, 0.1) 10%); background-size: 5px 5px; z-index: 1;" />
					<span style="color: #ffffff; position: relative; z-index: 2; top: -10px;">BLUE</span>
					<span style="color: #0080ff; position: relative; z-index: 2; top: 10px; margin-left: -5px;">
						PHOENIIIX
					</span>
				</p>
			</>
		)
	}
	<span class:list={{ 'sr-only': config.logo?.replacesTitle }}>
		{config.title}
	</span>
</a>

<style>
	.site-title {
		align-items: center;
		gap: var(--sl-nav-gap);
		font-size: var(--sl-text-h4);
		font-weight: 600;
		color: var(--sl-color-text-accent);
		text-decoration: none;
		white-space: nowrap;
		font-family: 'IBM Plex Mono', 'Menlo', 'DejaVu Sans Mono', 'Bitstream Vera Sans Mono', Courier,
			monospace;
	}
	img {
		height: calc(var(--sl-nav-height) - 2 * var(--sl-nav-pad-y));
		width: auto;
		max-width: 100%;
		object-fit: contain;
		object-position: 0 50%;
		font-family: 'IBM Plex Mono', 'Menlo', 'DejaVu Sans Mono', 'Bitstream Vera Sans Mono', Courier,
			monospace;
	}
</style>
